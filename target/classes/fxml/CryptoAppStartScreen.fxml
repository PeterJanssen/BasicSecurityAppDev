<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="be.pxl.basicSecurity.appDev.crypto.Controller">
    <stylesheets>
        <URL value="@../css/CryptoAppStartScreen.css"/>
    </stylesheets>
    <center>
        <GridPane hgap="150" vgap="100" alignment="BASELINE_CENTER">
            <Label id="toplabel" text="Choose an option" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <VBox styleClass="vbox" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="0">
                <Label styleClass="leftAndRightLabels" text="Decrypt"/>
                <ImageView fitHeight="100" fitWidth="100" onMousePressed="#OpenDecryptionPage">
                    <Image url="@../images/Decrypt.png"/>
                </ImageView>
            </VBox>
            <VBox styleClass="vbox" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="2">
                <Label styleClass="leftAndRightLabels" text="Encrypt"/>
                <ImageView fitHeight="100" fitWidth="100" onMousePressed="#OpenEncryptionKeyGenerationPage">
                    <Image url="@../images/Encrypt.png"/>
                </ImageView>
            </VBox>
        </GridPane>
    </center>
    <bottom>
        <VBox styleClass="vbox" spacing="3">
            <Label text="Hybrid crypto system Basic Security Hogeschool PXL 2018-2019"/>
            <Label text="Made by Ben Merken and Peter Janssen"/>
            <Label text="Icons by https://www.flaticon.com/authors/freepik"/>
        </VBox>
    </bottom>
</BorderPane>
