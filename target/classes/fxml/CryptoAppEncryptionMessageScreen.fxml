<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="be.pxl.basicSecurity.appDev.crypto.Controller">
    <stylesheets>
        <URL value="@../css/CryptoAppEncryptionMessageScreen.css"/>
    </stylesheets>
    <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3">
        <Label text="Encryption - key generation"/>
        <Label text="Please choose file locations, fill in a message and click 'Start encrypting'&#10;to start encrypting and saving the encrypted message/symmetric key/hash"/>
    </VBox>
    <ImageView GridPane.rowIndex="0" GridPane.columnIndex="3" fitHeight="100" fitWidth="100">
        <Image url="@../images/Encrypt.png"/>
    </ImageView>
    <VBox GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="1">
        <HBox>
            <Label text="File 1"/>
            <TextField promptText="Path to file 1"/>
            <Button text="Save file 1"/>
        </HBox>
        <HBox>
            <Label text="File 2"/>
            <TextField promptText="Path to file 2"/>
            <Button text="Save file 2"/>
        </HBox>
        <HBox>
            <Label text="File 3"/>
            <TextField promptText="Path to file 3"/>
            <Button text="Save file 3"/>
        </HBox>
        <HBox>
            <Label text="Message"/>
            <TextArea promptText="The message contained in the txt file will be shown here"/>
            <Button text="Choose message"/>
        </HBox>
    </VBox>
    <VBox GridPane.rowIndex="2" GridPane.columnIndex="0">
        <Label text="Output"/>
        <HBox>
            <ImageView fitHeight="100" fitWidth="100" onMousePressed="#OpenEncryptionKeyGenerationPage">
                <Image url="@../images/left-arrow.png"/>
            </ImageView>
            <Label text="Return" />
        </HBox>
    </VBox>
    <TextArea
            promptText="When 'start encrypting' is pressed this box will contain a message. If the message is encrypted and saved successfully it will contain 'message encrypted and saved successfully' and a check sign with a green background will be shown. If the message was not encrypted successfully it will contain 'Message not encrypted successfully' or if the message was not saved correctly it will contain 'Message not saved successfully' and a cross with a red background will be shown. The error stacktrace will be appended underneath."
            GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <ImageView GridPane.rowIndex="2" GridPane.columnIndex="2" fitHeight="100" fitWidth="100">
        <Image url="@../images/cross-remove-sign.png"/>
    </ImageView>
    <VBox GridPane.rowIndex="2" GridPane.columnIndex="3">
        <Button text="Start encrypting"/>
        <ImageView fitHeight="25" fitWidth="25" onMousePressed="#OpenHomePage">
            <Image url="@../images/home-page.png"/>
        </ImageView>
    </VBox>
</GridPane>
